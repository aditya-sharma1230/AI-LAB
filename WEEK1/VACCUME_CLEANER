def vacuum_world():
    print("NAME: Aditya Sharma, ROLL NO: 1BM22CS021\n")

    goal_state = {'A': '0', 'B': '0'}
    cost = 0

    location_input = input("Enter Location of Vacuum (A or B): ").upper()
    status_input = input(f"Enter status of {location_input} (1 for Dirty, 0 for Clean): ")
    status_input_complement = input("Enter status of the other room (1 for Dirty, 0 for Clean): ")

    # Determine initial condition print based on location
    if location_input == 'A':
        print(f"Initial Location Condition: {{A: {status_input}, B: {status_input_complement}}}")
    else:
        print(f"Initial Location Condition: {{A: {status_input_complement}, B: {status_input}}}")

    if location_input == 'A':
        print("Vacuum is placed in Location A")
        if status_input == '1':
            print("Location A is Dirty.")
            goal_state['A'] = '0'
            cost += 1
            print("COST for CLEANING A:", cost)
            print("Location A has been Cleaned.")
        else:
            print("Location A is already clean.")

        if status_input_complement == '1':
            print("Location B is Dirty.")
            print("Moving RIGHT to Location B.")
            cost += 1
            print("COST for moving RIGHT:", cost)
            goal_state['B'] = '0'
            cost += 1
            print("COST for CLEANING B:", cost)
            print("Location B has been Cleaned.")
        else:
            print("Location B is already clean.")
            print("No action taken for B. Current cost:", cost)

    elif location_input == 'B':
        print("Vacuum is placed in Location B")
        if status_input == '1':
            print("Location B is Dirty.")
            goal_state['B'] = '0'
            cost += 1
            print("COST for CLEANING B:", cost)
            print("Location B has been Cleaned.")
        else:
            print("Location B is already clean.")

        if status_input_complement == '1':
            print("Location A is Dirty.")
            print("Moving LEFT to Location A.")
            cost += 1
            print("COST for moving LEFT:", cost)
            goal_state['A'] = '0'
            cost += 1
            print("COST for CLEANING A:", cost)
            print("Location A has been Cleaned.")
        else:
            print("Location A is already clean.")
            print("No action taken for A. Current cost:", cost)

    else:
        print("Invalid location input. Please enter A or B.")
        return

    print("\nGOAL STATE:")
    print(goal_state)
    print("Performance Measurement (Total cost):", cost)


# Run the program
vacuum_world()
